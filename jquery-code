// bad jquery code for reference. To be replaced.



	function copyToClipboard(element) {
	  var $temp = $("<input>");
	  $("body").append($temp);
	  $temp.val(element).select();
	  document.execCommand("copy");
	  $temp.remove();
	}


    jQuery(document).on('focusin',"#contactPerson",function (event) 
